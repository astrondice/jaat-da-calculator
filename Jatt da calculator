<script>
const disp=document.getElementById('display');
function press(v){disp.value+=v;}
function clearAll(){disp.value='';}
function delOne(){disp.value=disp.value.slice(0,-1);}
function toggleSign(){
  if(!disp.value){disp.value='-';return;}
  try{let val=Number(eval(disp.value));disp.value=(val*-1).toString();}catch{}
}
function equals(){
  try{
    let out=Function('"use strict";return ('+disp.value+')')();
    disp.value=(typeof out==='number'&&isFinite(out))?+(+out.toFixed(12)):'Error';
  }catch{disp.value='Error';}
}
function toggleExtras(){
  document.getElementById('extras').classList.toggle('hidden');
}
</script>
